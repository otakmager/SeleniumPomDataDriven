    <test verbose="1" name="Length Converter Test">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="testCases.length.LengthConverterTest"/>
        </classes>
    </test>
    <test verbose="1" name="Mass Converter Test">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="testCases.mass.MassConverterTest"/>
        </classes>
    </test>
