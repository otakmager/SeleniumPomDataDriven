        <listener class-name="utils.SuiteListener"/>
    </listeners>
    <test verbose="1" name="User Interface Test">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="testCases.ui.UserInterfaceTest"/>
        </classes>
